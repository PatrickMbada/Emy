pipeline {
    agent any

    stages {
        stage("build") {
            steps {
                echo 'I am building my first application...'
            }
        }
        stage("test") {
            steps {
                echo 'I am testing my first application...'
            }
        }
        stage("deploy") {
            steps {
                echo 'I am deploying my first application...'
            }
        }
    }
}
